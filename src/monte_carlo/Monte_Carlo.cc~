#include "Monte_Carlo.hh"

#include <iostream>
#include <random>

#include "Data.hh"
#include "Mesh.hh"

namespace monte_carlo_ns
{
    using namespace std;
    using namespace data_ns;
    using namespace mesh_ns;
    
    Monte_Carlo::
    Monte_Carlo(Data &data,
                Mesh &mesh)
    :
        data_(data),
        mesh_(mesh),
	distribution(0, 1)
    {
        data_.check();
        mesh_.check();

	for (unsigned i = 0; i < 10; ++i)
	  {
	    cout << rand() << endl;
	  }
    }
    
}
